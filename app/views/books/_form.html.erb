<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: "book_title" %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, id: "book_author" %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, step: "0.01", id: "book_price" %>
  </div>

  <div class="field">
    <%= form.label :published_date %>
    <%= form.date_select :published_date, start_year: 1900, end_year: Date.today.year %>
  </div>

  <%= form.submit %>
<% end %>